{% extends "layout.njk" %}
    
    
    {% block content %}
     <div class="card table-container" >

         <a href="/members/create">NOVO</a>

        <table width="100%">
            <thead>
                <tr>
                    <th>Members</th>
                    <th>Blood Type</th>
                    <th>Ação</th>
                </tr>   
            </thead>
            <tbody>
                {% for member in members %}
                <tr>
                    <td>
                        <span style="background-image: url({{member.avatar_url}})"></span>
                        {{member.name}}</td>
                    <td id="services">{{member.blood}}</td>
                    <td><a href="/members/{{member.id}}">ver</a></td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
     </div>
       
    {% endblock content %}
        