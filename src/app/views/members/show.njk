{% extends "layout.njk" %}
    
    
    {% block content %}
     <div class="card">
        <section class="avatar" style="background: url({{ members.avatar_url }}) no-repeat center center / cover"></section>
        <section class="details">
            <h3>Detalhes</h3>

            <div class="item">
                 <div>Membro</div>
                 <div>{{ members.name }}</div>
            </div>

            <div class="item">
                 <div>Aniversário</div>
                 <div>{{ members.birth }}</div>
            </div>

            <div class="item">
                 <div>Sexo</div>
                 <div>{{ "MASCULINO" if members.gender == "M" else "FEMININO" }}</div>
            </div>

            
            <div class="item">
                <div>Tipo Sanguíneo</div>
                <div>{{ members.blood }}</div>
            </div>

            <div class="item">
                <div>Peso (kg)</div>
                <div>{{ members.weight }}</div>
            </div>
            
            <div class="item">
                <div>Altura (cm)</div>
                <div>{{ members.height }}</div>
            </div>
            
            <div class="item">
                <div>Aluno de</div>
                <div>{{ members.instructor_name }}</div>
            </div>
            

            <a href="/members/{{ members.id }}/edit" class="button">Editar</a>
        </section>
     </div>
       
    {% endblock content %}
        