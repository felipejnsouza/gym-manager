{% extends "layout.njk" %}
    
    
    {% block content %}
     <div class="card table-container" >
        <table width="100%">
            <thead>
                <tr>
                    <th>Instructor</th>
                    <th>Services</th>
                    <th>Ação</th>
                </tr>   
            </thead>
            <tbody>
                {% for instructor in instructors %}
                <tr>
                    <td>
                        <span style="background-image: url({{instructor.avatar_url}})"></span>
                        {{instructor.name}}</td>
                    <td id="services">{{instructor.services}}</td>
                    <td><a href="/instructors/{{instructor.id}}">ver</a></td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
     </div>
       
    {% endblock content %}
        